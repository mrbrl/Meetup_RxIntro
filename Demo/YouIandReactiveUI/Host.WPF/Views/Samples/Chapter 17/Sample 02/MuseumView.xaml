<rxui:ReactiveUserControl x:Class="Book.Views.Samples.Chapter17.Sample02.MuseumView"
        x:TypeArguments="vms:MuseumViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:Book.ViewModels.Samples.Chapter17.Sample02;assembly=Book.ViewModels">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label
            x:Name="nameLabel"
            FontWeight="Bold"
            FontSize="16"/>
        <Label
            x:Name="locationLabel"
            Grid.Row="1"/>
    </Grid>
</rxui:ReactiveUserControl>