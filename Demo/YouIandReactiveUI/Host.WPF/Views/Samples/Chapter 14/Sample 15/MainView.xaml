<rxui:ReactiveUserControl x:Class="Book.Views.Samples.Chapter14.Sample15.MainView"
        x:TypeArguments="vms:MainViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:Book.ViewModels.Samples.Chapter14.Sample15;assembly=Book.ViewModels"
        xmlns:ma="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:b="clr-namespace:Book.Behaviors"
        b:Screenshot.Width="250"
        b:Screenshot.Height="70"
        Focusable="True">
    <StackPanel>
        <TextBox
            x:Name="nameTextBox"
            ma:TextBoxHelper.Watermark="Enter a dinosaur name"/>
        <Label
            x:Name="displayLabel"/>
    </StackPanel>
</rxui:ReactiveUserControl>