<rxui:ReactiveUserControl x:Class="Book.Views.Samples.Chapter10.Sample02.MainView"
        x:TypeArguments="vms:MainViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:Book.ViewModels.Samples.Chapter10.Sample02;assembly=Book.ViewModels"
        xmlns:ma="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:b="clr-namespace:Book.Behaviors"
        b:Screenshot.Width="350"
        b:Screenshot.Height="400"
        Focusable="True">
    <DockPanel>
        <Label
            x:Name="totalFossilCountLabel"
            DockPanel.Dock="Top"
            FontSize="12pt"
            FontWeight="Bold"
            Margin="4"/>

        <ListBox
            x:Name="dinosaursListBox">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <rxui:ViewModelViewHost
                            ViewModel="{Binding}"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</rxui:ReactiveUserControl>