<rxui:ReactiveUserControl x:Class="Book.Views.Samples.Chapter04.Sample03.DinosaurView"
        x:TypeArguments="vms:DinosaurViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:Book.ViewModels.Samples.Chapter04.Sample03;assembly=Book.ViewModels"
        Background="Transparent">
    <Grid
        Margin="0 8 0 8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border
            x:Name="periodColorBorder"
            Grid.RowSpan="2"
            Width="8"
            Margin="4 2 4 2"/>
        <TextBlock
            x:Name="nameTextBlock"
            Grid.Column="1"
            FontSize="12pt"
            FontWeight="Bold"
            VerticalAlignment="Center"
            Margin="0 20 0 0"/>
        <TextBlock
            x:Name="periodTextBlock"
            Grid.Row="1"
            Grid.Column="1"
            FontSize="10pt"
            Margin="0 0 0 20"/>
    </Grid>
</rxui:ReactiveUserControl>