<rxui:ReactiveUserControl x:Class="Book.Views.Samples.Chapter04.Sample04.DinosaurExhibitionView"
        x:TypeArguments="vms:DinosaurExhibitionViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:Book.ViewModels.Samples.Chapter04.Sample04;assembly=Book.ViewModels"
        xmlns:ma="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:b="clr-namespace:Book.Behaviors">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            x:Name="whatTextBlock"
            FontSize="14"
            FontWeight="Bold"
            Margin="4 8 0 2"/>
        <TextBlock
            x:Name="whereTextBlock"
            Grid.Row="1"
            FontSize="12"
            Margin="4 2 0 8"/>
        <TextBlock
            x:Name="whenTextBlock"
            Grid.Column="1"
            Grid.RowSpan="2"
            VerticalAlignment="Center"
            Margin="0 0 4 0"/>
    </Grid>
</rxui:ReactiveUserControl>