<rxui:ReactiveUserControl x:Class="Book.Views.Samples.Chapter04.Sample04.RegisterExhibitionView"
        x:TypeArguments="vms:RegisterExhibitionViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:Book.ViewModels.Samples.Chapter04.Sample04;assembly=Book.ViewModels"
        xmlns:ma="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:b="clr-namespace:Book.Behaviors">
    <StackPanel>
        <TextBox
            x:Name="whatTextBox"
            ma:TextBoxHelper.Watermark="Exhibition name"/>
        <TextBox
            x:Name="whenTextBox"
            ma:TextBoxHelper.Watermark="Exhibition date"/>
        <TextBox
            x:Name="whereTextBox"
            ma:TextBoxHelper.Watermark="Exhibition location"/>
        <Button
            x:Name="registerButton"
            Content="Register"/>
    </StackPanel>
</rxui:ReactiveUserControl>