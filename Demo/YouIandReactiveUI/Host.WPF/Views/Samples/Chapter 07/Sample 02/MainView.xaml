<rxui:ReactiveUserControl x:Class="Book.Views.Samples.Chapter07.Sample02.MainView"
        x:TypeArguments="vms:MainViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:Book.ViewModels.Samples.Chapter07.Sample02;assembly=Book.ViewModels"
        xmlns:ma="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:b="clr-namespace:Book.Behaviors"
        Focusable="True"
        b:Screenshot.Width="475"
        b:Screenshot.Height="50">
    <Label
        HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"
        FontSize="16"
        Focusable="True">
        <Label.Content>
            <TextBlock>
                <TextBlock.Inlines>
                    <Run Text="You have been waiting"/>
                    <Run
                        x:Name="secondsRun"
                        FontWeight="Bold"/>
                    <Run Text="seconds for a dinosaur to appear here."/>
                </TextBlock.Inlines>
            </TextBlock>
        </Label.Content>
    </Label>
</rxui:ReactiveUserControl>