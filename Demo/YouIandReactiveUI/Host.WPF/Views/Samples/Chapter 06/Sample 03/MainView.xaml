<rxui:ReactiveUserControl x:Class="Book.Views.Samples.Chapter06.Sample03.MainView"
        x:TypeArguments="vms:MainViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:Book.ViewModels.Samples.Chapter06.Sample03;assembly=Book.ViewModels"
        xmlns:ma="http://metro.mahapps.com/winfx/xaml/controls">
    <StackPanel>
        <TextBox
            x:Name="firstNameTextBox"
            ma:TextBoxHelper.Watermark="First name"/>
        <TextBox
            x:Name="lastNameTextBox"
            ma:TextBoxHelper.Watermark="Last name"/>

        <Label
            x:Name="messageLabel"/>
    </StackPanel>
</rxui:ReactiveUserControl>