<rxui:ReactiveUserControl x:Class="Book.Views.Samples.Chapter19.Sample01.MainView"
        x:TypeArguments="vms:MainViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:Book.ViewModels.Samples.Chapter19.Sample01;assembly=Book.ViewModels">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label
            Content="Name of your pet dinosaur:"
            VerticalAlignment="Center"/>

        <TextBox
            x:Name="nameTextBox"
            Grid.Column="1"/>
    </Grid>
</rxui:ReactiveUserControl>