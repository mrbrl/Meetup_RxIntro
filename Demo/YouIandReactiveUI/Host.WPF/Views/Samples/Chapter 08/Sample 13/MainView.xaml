<rxui:ReactiveUserControl x:Class="Book.Views.Samples.Chapter08.Sample13.MainView"
        x:TypeArguments="vms:MainViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:Book.ViewModels.Samples.Chapter08.Sample13;assembly=Book.ViewModels"
        xmlns:ma="http://metro.mahapps.com/winfx/xaml/controls"
        Focusable="True">
    <StackPanel>
        <Label
            Content="Dinosaur Extravaganza!"
            FontWeight="Bold"
            FontSize="18"
            HorizontalAlignment="Center"/>
        <Button
            x:Name="button"
            Content="Book a Reservation"/>
        <Label
            x:Name="executionCountLabel"/>
        <Label
            x:Name="failureCountLabel"/>
    </StackPanel>
</rxui:ReactiveUserControl>