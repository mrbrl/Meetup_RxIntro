<rxui:ReactiveUserControl x:Class="Book.Views.Samples.Chapter11.Sample02.ChatView"
        x:TypeArguments="vms:ChatViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:Book.ViewModels.Samples.Chapter11.Sample02;assembly=Book.ViewModels"
        Margin="0,0,0,10">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label
            x:Name="titleLabel"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Background="{StaticResource AccentColorBrush3}"
            FontWeight="Bold"
            FontSize="14"
            Padding="8"/>
        <ListBox
            x:Name="chatMessagesListBox"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Focusable="False"/>
        <TextBox
            x:Name="messageTextBox"
            Grid.Row="2"
            Grid.Column="0"/>
        <Button
            x:Name="sendMessageButton"
            Grid.Row="2"
            Grid.Column="1">Send</Button>
    </Grid>
</rxui:ReactiveUserControl>