<rxui:ReactiveUserControl x:Class="Book.Views.ChapterView"
        x:TypeArguments="vms:ChapterViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rxui="http://reactiveui.net"
        xmlns:vms="clr-namespace:Book.ViewModels;assembly=Book.ViewModels">
    <Border Background="{StaticResource HighlightBrush}" Padding="12 20 12 6">
        <TextBlock>
            <TextBlock.Inlines>
                <Run x:Name="chapterNumberRun" FontSize="18" FontWeight="Bold" Foreground="{StaticResource IdealForegroundDisabledBrush}"/>
                <Run Text=" "/>
                <Run x:Name="chapterNameRun" FontSize="24" FontWeight="Bold" Foreground="{StaticResource IdealForegroundColorBrush}"/>
            </TextBlock.Inlines>
        </TextBlock>
    </Border>
</rxui:ReactiveUserControl>